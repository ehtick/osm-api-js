{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
